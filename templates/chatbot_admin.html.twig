<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Hackathon</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
<div class="max-w-md mx-auto p-4">

    <h1 class="text-4xl text-center my-8 text-bold font-medium text-gray-800">Hopital</h1>

    <div class="bg-white rounded-lg shadow-md p-4">

        <div class="flex items-center mb-4">
            <div class="ml-3">
                <p class="text-xl font-medium">Interface Admin</p>
                <p class="text-gray-500">Conversation SMS</p>
            </div>
        </div>


        <div class="space-y-4 min-h-64">

            {% for message in conversation %}
                {% if message.type == 'message' %}
                    <div class="flex items-start">
                        <img src="https://pbs.twimg.com/profile_images/1707101905111990272/Z66vixO-_normal.jpg" alt="Other User Avatar" class="w-8 h-8 rounded-full ml-3" />
                        <div class="ml-3 bg-gray-100 p-3 rounded-lg">
                            <p class="text-sm text-gray-800">{{  message.content  }}</p>
                        </div>
                    </div>

                {% else %}
                    <div class="flex items-end justify-end">
                        <div class="bg-blue-500 p-3 rounded-lg">
                            <p class="text-sm text-white">{{ message.content }}</p>
                        </div>
                        <img src="https://static-00.iconduck.com/assets.00/robot-icon-2048x1639-hjv1ibvo.png" alt="Other User Avatar" class="w-8 h-8 rounded-full ml-3" />
                    </div>
                {% endif %}
            {% endfor %}



        </div>


        <form action="#" method="post" class="mt-4 flex items-center">
            <input
                    type="text"
                    name="content"
                    placeholder="Tapez ici votre rÃ©ponse..."
                    class="flex-1 py-2 px-3 rounded-full bg-gray-100 focus:outline-none"
            />
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-full ml-3 hover:bg-blue-600">Envoyer</button>
        </form>

    </div>
</div>
</body>
</html>
